  <div class="container">
    <h1>Curso Intensivo de ChatGPT</h1>
    <p>Esta p√°gina es para que t√∫ (pap√°) puedas escribir tus dudas y Jordi te pueda responder y guiar paso a paso. Tambi√©n puedes abrir ChatGPT directamente desde aqu√≠.</p>

    <div class="link-chatgpt">
      üëâ <a href="https://chat.openai.com" target="_blank">Haz clic aqu√≠ para abrir ChatGPT</a>
    </div>

    <h2>Tu conversaci√≥n con Jordi:</h2>
    <div class="chat-box" id="chatBox"></div>
    <textarea id="userInput" placeholder="Escribe aqu√≠ tu duda o comentario..."></textarea>
    <button onclick="sendMessage()">Enviar</button>

    <h3>Indicaciones de Jordi:</h3>
    <div class="guide-box" id="guideBox"></div>
  </div>

  <script>
    const chatBox = document.getElementById('chatBox');
    const guideBox = document.getElementById('guideBox');
    const userInput = document.getElementById('userInput');

    const messages = JSON.parse(localStorage.getItem('chat-messages')) || [];
    const guides = JSON.parse(localStorage.getItem('guide-messages')) || [];

    function renderMessages() {
      chatBox.innerHTML = messages.map(m => `<p>üßî‚Äç‚ôÇÔ∏è T√∫: ${m}</p>`).join('');
      guideBox.innerHTML = guides.map(g => `<p>üí¨ Jordi: ${g}</p>`).join('');
    }

    function sendMessage() {
      const text = userInput.value.trim();
      if (text !== '') {
        messages.push(text);
        userInput.value = '';
        localStorage.setItem('chat-messages', JSON.stringify(messages));
        renderMessages();
        setTimeout(() => addGuide(`Gracias por tu mensaje. ¬øTe puedo ayudar con algo m√°s?`), 1000);
      }
    }

    function addGuide(text) {
      guides.push(text);
      localStorage.setItem('guide-messages', JSON.stringify(guides));
      renderMessages();
    }

    renderMessages();
  </script>
